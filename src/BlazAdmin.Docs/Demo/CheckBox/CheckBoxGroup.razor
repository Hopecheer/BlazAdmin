@inherits CheckBoxGroupBase
已选中数据：@string.Join(",", SelectedValues)
<br />
<BCheckBox Value="true" Status="@Status" StatusChanged="status=>SelectAll(status)">全选</BCheckBox>
<BCheckBoxGroup TValue="List<int>">
    @foreach (var item in Values)
    {
        <BCheckBox Value="item" Status="SelectedValues.Contains(item) ? Status.Checked:Status.UnChecked" StatusChanged="status=> ChangeStatus(status,item)">@item</BCheckBox>
    }
</BCheckBoxGroup>