@page "/user/list"
@inherits BUserManagementBase
<BButtonGroup>
    <BButton Type="@ButtonType.Primary" Size="@ButtonSize.Small">创建用户</BButton>
    <BButton Type="@ButtonType.Danger" Size="@ButtonSize.Small">批量删除</BButton>
</BButtonGroup>
<BTable DataSource="Users">
    <BTableColumns TRow="object">
        <BTableTemplateColumn TRow="object" Text="操作">
            <BButton Type="@ButtonType.Primary" Size="@ButtonSize.Mini" OnClick="@(e=> Edit(context))">编辑</BButton>
            <BButton Type="@ButtonType.Danger" Size="@ButtonSize.Mini" OnClick="@(e=> Del(context))">删除</BButton>
        </BTableTemplateColumn>
    </BTableColumns>
</BTable>