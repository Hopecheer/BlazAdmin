@inherits BModifyPasswordBase
<BForm Style="padding:0px 50px;" @ref="form">
    <BFormItem IsRequired="true" TValue="string" Label="旧密码" Name="@nameof(ModifyPasswordModel.OldPassword)">
        <BInput PrefixIcon="el-icon-lock" Type="@InputType.Password" TValue="string" Placeholder="旧密码"></BInput>
    </BFormItem>
    <BFormItem IsRequired="true" TValue="string" Label="新密码" Name="@nameof(ModifyPasswordModel.NewPassword)">
        <BInput PrefixIcon="el-icon-lock" Type="@InputType.Password" TValue="string" Placeholder="新密码"></BInput>
    </BFormItem>
    <BFormActionItem>
        <BButton Type="@ButtonType.Primary" OnClick="ModifyAsync" Style="width:100%;">修改</BButton>
    </BFormActionItem>
</BForm>