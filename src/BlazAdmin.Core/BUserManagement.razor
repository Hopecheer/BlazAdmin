@page "/user/list"
@using BlazAdmin.Core.Model
@inherits BUserManagementBase
<BButtonGroup>
    <BButton Type="@ButtonType.Primary" Size="@ButtonSize.Small">创建用户</BButton>
    <BButton Type="@ButtonType.Danger" Size="@ButtonSize.Small">批量删除</BButton>
</BButtonGroup>
<BTable TRow="UserModel" DataSource="Users">
    <BTableColumns TRow="UserModel">
        <BTableCheckBoxColumn TRow="UserModel"></BTableCheckBoxColumn>
        <BTableColumn TRow="UserModel" Text="用户名" Property="x=>x.Username"></BTableColumn>
        <BTableDateTimeColumn TRow="UserModel" Text="创建日期" Property="x=>x.CreationTime"></BTableDateTimeColumn>
    </BTableColumns>
</BTable>